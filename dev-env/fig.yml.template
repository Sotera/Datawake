mysql:
  image: mysql
  environment:
    MYSQL_ROOT_PASSWORD: root
  ports:
    - "3336:3306"


datawake:
  build: ../server
  links:
    - mysql:mysql
  ports:
    - "80:80"
  environment:
    DW_DB: memex_sotera
    DW_DB_USER: root
    DW_DB_PASSWORD: root
    DW_DB_HOST: 192.168.59.103
    DW_DB_PORT: 3336
    DW_MOCK_AUTH:  1
    DW_MOCK_FORENSIC_AUTH: 1
    DW_CONN_TYPE: mysql
  volumes:
    - <full path to the web server code>/server/datawake:/usr/local/share/tangelo/web/datawake
    - <full path to the web server code>/server/forensic:/usr/local/share/tangelo/web/forensic




